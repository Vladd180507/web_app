<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.proj.frontend.controller.LoginController">

    <center>
        <VBox spacing="15" alignment="CENTER">
            <padding><Insets top="30" bottom="30" left="30" right="30"/></padding>

            <Label text="Login" style="-fx-font-size: 20px;"/>

            <TextField fx:id="emailField" promptText="Email" maxWidth="200"/>
            <PasswordField fx:id="passwordField" promptText="Password" maxWidth="200"/>

            <Button text="Login" onAction="#handleLogin" maxWidth="200"/>
        </VBox>
    </center>
</BorderPane>