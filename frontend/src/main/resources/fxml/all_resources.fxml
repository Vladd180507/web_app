<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.proj.frontend.controller.AllResourcesController">

    <top>
        <HBox spacing="10">
            <padding><Insets top="10" left="10"/></padding>
            <Button text="Back" onAction="#handleBack"/>
            <Label text="All Resources" style="-fx-font-size:20px; -fx-font-weight:bold;"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="resourcesTable">
            <columns>
                <TableColumn fx:id="groupColumn" text="Group ID" prefWidth="100"/>
                <TableColumn fx:id="titleColumn" text="Title" prefWidth="200"/>
                <TableColumn fx:id="urlColumn" text="URL" prefWidth="300"/>
            </columns>
        </TableView>
    </center>

</BorderPane>