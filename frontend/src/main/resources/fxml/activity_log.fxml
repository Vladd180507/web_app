<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.proj.frontend.controller.ActivityLogController"
            styleClass="root">

    <center>
        <StackPane alignment="CENTER">
            <!-- Темна картка з логами -->
            <VBox spacing="20"
                  alignment="CENTER"
                  maxWidth="950"
                  prefWidth="950"
                  maxHeight="580"
                  prefHeight="580"
                  styleClass="activity-card">

                <!-- Верхній рядок: Back + заголовок -->
                <HBox spacing="10" alignment="CENTER_LEFT" maxWidth="900">
                    <Button text="Back to dashboard"
                            onAction="#handleBack"
                            styleClass="secondary-button"/>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Label text="Activity log"
                           styleClass="activity-title"/>
                </HBox>

                <!-- Таблиця з логами -->
                <TableView fx:id="logTable"
                           VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="70"/>
                        <TableColumn fx:id="timestampColumn" text="Timestamp" prefWidth="220"/>
                        <TableColumn fx:id="userIdColumn" text="User ID" prefWidth="80"/>
                        <TableColumn fx:id="actionColumn" text="Action" prefWidth="140"/>
                        <TableColumn fx:id="detailsColumn" text="Details" prefWidth="400"/>
                    </columns>
                </TableView>

            </VBox>
        </StackPane>
    </center>

</BorderPane>