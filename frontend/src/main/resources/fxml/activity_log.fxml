<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.proj.frontend.controller.ActivityLogController"
            styleClass="root">

    <center>
        <StackPane alignment="CENTER">
            <!-- Та ж сама карточка, що й у dashboard (app-card) -->
            <VBox spacing="20"
                  alignment="CENTER"
                  maxWidth="950"
                  prefWidth="950"
                  maxHeight="580"
                  prefHeight="580"
                  styleClass="app-card">

                <!-- Верхній рядок: Back + заголовок -->
                <HBox spacing="10" alignment="CENTER_LEFT" maxWidth="900">
                    <Button text="Back"
                            onAction="#handleBack"
                            styleClass="secondary-button"/>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Label text="Activity log"
                           styleClass="app-header-title"/>
                </HBox>

                <!-- Таблиця з логами -->
                <TableView fx:id="logTable"
                           VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn"        text="ID"         prefWidth="64"/>
                        <TableColumn fx:id="timestampColumn" text="Timestamp"  prefWidth="210"/>
                        <TableColumn fx:id="userIdColumn"    text="User ID"    prefWidth="70.3"/>
                        <TableColumn fx:id="actionColumn"    text="Action"     prefWidth="140"/>
                        <TableColumn fx:id="detailsColumn"   text="Details"    prefWidth="400"/>
                    </columns>
                </TableView>

            </VBox>
        </StackPane>
    </center>

</BorderPane>