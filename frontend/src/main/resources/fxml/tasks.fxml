<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.proj.frontend.controller.TasksController">

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Back to dashboard" onAction="#handleBack"/>
            <Label fx:id="groupLabel" text="Group: " style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="tasksTable">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="60"/>
                <TableColumn fx:id="titleColumn" text="Title" prefWidth="160"/>
                <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="260"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                <TableColumn fx:id="deadlineColumn" text="Deadline" prefWidth="120"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="New task:"/>
                <TextField fx:id="titleField" promptText="Title" prefWidth="150"/>
                <TextField fx:id="descriptionField" promptText="Description" prefWidth="250"/>
                <DatePicker fx:id="deadlinePicker" promptText="Deadline"/>
                <Button text="Add task" onAction="#handleAddTask"/>
                <Button text="Edit task" onAction="#handleEditTask"/>
                <Button text="Delete task" onAction="#handleDeleteTask"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Change status:"/>
                <ComboBox fx:id="statusCombo" prefWidth="150"/>
                <Button text="Apply to selected task" onAction="#handleChangeStatus"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Show statistics" onAction="#handleShowStats"/>
            </HBox>

            <Label fx:id="deadlineSummaryLabel" text=""/>
        </VBox>
    </bottom>

</BorderPane>