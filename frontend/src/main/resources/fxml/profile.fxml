<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.proj.frontend.controller.ProfileController"
            styleClass="root">

    <center>
        <StackPane alignment="CENTER">
            <!-- Темна картка по центру -->
            <VBox spacing="20"
                  alignment="CENTER"
                  maxWidth="360"
                  prefWidth="360"
                  maxHeight="390"
                  prefHeight="390"
                  styleClass="profile-card">

                <Label text="Profile" styleClass="profile-title"/>

                <!-- Name -->
                <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="260">
                    <Label text="Name" styleClass="field-label"/>
                    <TextField fx:id="nameField" promptText="Your name"/>
                </VBox>

                <!-- Email -->
                <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="260">
                    <Label text="Email" styleClass="field-label"/>
                    <TextField fx:id="emailField" promptText="Email"/>
                </VBox>

                <!-- Buttons -->
                <HBox spacing="15" alignment="CENTER" maxWidth="260">
                    <Button text="Back"
                            onAction="#handleBack"
                            styleClass="secondary-button"/>
                    <Button text="Save changes"
                            onAction="#handleSave"
                            styleClass="primary-button"/>
                </HBox>

            </VBox>
        </StackPane>
    </center>

</BorderPane>